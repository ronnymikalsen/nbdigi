      "@nbdigi/ui-search": ["libs/ui-search/src/index.ts"],
      "@nbdigi/ui-my-library": ["libs/ui-my-library/src/index.ts"],
      "@nbdigi/ui-my-settings": ["libs/ui-my-settings/src/index.ts"],
      "@nbdigi/ui-settings": ["libs/ui-settings/src/index.ts"],
      "@nbdigi/backend": ["libs/backend/src/index.ts"],
      "@nbdigi/data-models": ["libs/data-models/src/index.ts"],
      "@nbdigi/authentication-state": ["libs/authentication-state/src/index.ts"]
